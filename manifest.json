{
    "manifest_version": 3,
    "name": "Papergames Ban Bypass",
    "version": "3.0",
    "description": "Simple extension to clear local storage, session storage, and cookies for unban purposes.",
    "permissions": ["cookies", "storage", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
